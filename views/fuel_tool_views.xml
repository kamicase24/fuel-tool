<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fuel_tool_form" model="ir.ui.view">
        <field name="name">fuel.tool.form</field>
        <field name="model">fuel.tool</field>
        <field name="arch" type="xml">
            <form save="false" create="false">
                <header>
                    <button name="import_xlm"
                            string="Importar"
                            type="object"
                            class="oe_highlight"
                    />
                    ->
                    <button name="generate_xml"
                            string="XML"
                            type="object"
                            class="oe_highlight"
                    />
                </header>
                <field name="block_result" invisible="1"/>
                <group>
                    <group>
                        <field name="file" widget="file"/>
                        <field name="custom_fields" widget="many2many_tags"/>
                    </group>
                </group>
                <notebook>
                    <page string="Lineas de Reporte">
                        <field name="report" readonly="1">
                            <tree edit="false" create="false" colors="red: gallons == 0" default_order="gallons">
                                <field name="id" invisible="1"/>
                                <field name="token" string="VehicleId"/>
                                <field name="date" string="Fecha"/>
                                <field name="hour"/>
                                <field name="gallons" string="Volume"/>
                                <field name="month"/>
                                <field name="supplier""/>
                                <field name="license_plate"/>
                                <field name="kilometer"/>
                                <field name="fuel_type"/>
                                <field name="prices"/>
                                <field name="real_prices"/>
                                <field name="inv_prices"/>
                                <field name="difference"/>
                                <field name="ticket_number"/>
                                <field name="responsable"/>
                                <field name="location"/>
                                <field name="commentary"/>
                                <field name="payment_type"/>
                                <field name="partner"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="fuel_tool_xml_form" model="ir.ui.view">
        <field name="name">fuel.tool.xml.form</field>
        <field name="model">fuel.tool.xml</field>
        <field name="arch" type="xml">
            <form>
                <field name="report" invisible="1"/>
                <button name="download_xml" string="Descargar XML" type="object" class="oe_highlight"/>
                <field name="binary_string" invisible="1"/>
                <field name="binary_xml" filename="binary_string" readonly="1"/>
            </form>
        </field>
    </record>

    <record id="fuel_tool_config_tree" model="ir.ui.view">
        <field name="name">fuel.tool.config.tree</field>
        <field name="model">fuel.tool.fields</field>
        <field name="arch" type="xml">
            <tree editable="botton">
                <field name="name"/>
                <field name="category"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <record id="fuel_tool_action" model="ir.actions.act_window">
        <field name="name">Fuel Tool</field>
        <field name="res_model">fuel.tool</field>
        <field name="view_mode">form</field>
        <field name="view_type">form</field>
    </record>

    <record id="fuel_tool_fields_action" model="ir.actions.act_window">
        <field name="name">Custom Fields</field>
        <field name="res_model">fuel.tool.fields</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
    </record>

    <menuitem
        id="fuel_tool_main_menu"
        name="Fuel Tool"
        action="fuel_tool_action"
    />

    <menuitem
        id="fuel_tool_submenu"
        name="Herramienta"
        parent="fuel_tool_main_menu"
        action="fuel_tool_action"
        sequence="1"
    />

    <menuitem
        id="fuel_tool_config"
        name="ConfiguraciÃ³n"
        parent="fuel_tool_main_menu"
        sequence="9"
    />
        <menuitem
            id="fuel_tool_fields_menu"
            name="Custom Fields"
            parent="fuel_tool_config"
            action="fuel_tool_fields_action"
        />
</odoo>